{
  "name": "privait",
  "version": "0.1.0",
  "scripts": {
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts -w",
    "db:create": "./scripts/db/create.sh",
    "db:drop": "./scripts/db/drop.sh",
    "db:recreate": "./scripts/db/recreate.sh",
    "db:drizzle:pull": "cd src/server && pnpm db:drizzle:pull",
    "db:drizzle:push": "cd src/server && pnpm db:drizzle:push",
    "format": "prettier --write .",
    "format:frontend": "prettier --write src/frontend",
    "format:server": "prettier --write src/server",
    "frontend:build": "cd src/frontend && pnpm build",
    "install:frontend": "cd src/frontend && pnpm install",
    "install-all": "npm-run-all install:root install:frontend install:server",
    "install:root": "pnpm install",
    "install:server": "cd src/server && pnpm install",
    "lint": "npm-run-all lint:server lint:frontend",
    "lint:frontend": "cd src/frontend && pnpm lint",
    "lint:server": "cd src/server && pnpm lint",
    "prepare": "husky",
    "start": "overmind s && sleep 1 && overmind echo",
    "start:frontend": "cd src/frontend && pnpm dev",
    "start:web": "cd src/server && pnpm start:web",
    "start:worker": "cd src/server && pnpm start:worker",
    "stop": "overmind kill",
    "test": "npm-run-all test:server test:frontend",
    "test:frontend": "cd src/frontend && pnpm test",
    "test:server": "cd src/server && pnpm test"
  },
  "dependencies": {
    "@0no-co/graphqlsp": "^1.15.0",
    "@eslint/js": "^9.36.0",
    "@graphql-codegen/cli": "^6.1.2",
    "@graphql-codegen/schema-ast": "^5.0.0",
    "@graphql-codegen/typescript-operations": "^5.0.8",
    "@graphql-codegen/typescript-react-apollo": "^4.4.0",
    "@parcel/watcher": "^2.5.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/pg": "^8.16.0",
    "esbuild-loader": "^4.3.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.2.0",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "pg": "^8.18.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.44.1",
    "wait-on": "^9.0.4"
  },
  "packageManager": "pnpm@10.17.0",
  "devDependencies": {
    "@types/node": "^25.3.0"
  }
}
